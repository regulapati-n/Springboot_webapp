[Unit]
Description=CSYE 6225 App
ConditionPathExists=/tmp/application.properties
After=network.target

[Service]
Type=simple
User=csye6225
Group=csye6225
ExecStart=/usr/bin/java -jar /home/tmp/CSYE6225-0.0.1-SNAPSHOT.jar --spring.config.location=/home/tmp/application.properties
